<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/latar"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="SUDUT BOLA"
        android:textColor="#2A3136"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Selamat Belanja"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Gambar pertama -->
        <ImageView
            android:id="@+id/BolaBasket"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Basket"
            android:layout_gravity="center"
            android:src="@drawable/bola_basket"/>

        <!-- Spasi antar gambar -->
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <!-- Gambar kedua -->
        <ImageView
            android:id="@+id/BolaVolley"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:contentDescription="Volley"
            android:layout_gravity="center"
            android:src="@drawable/bola_volley" />

        <!-- Spasi antar gambar -->
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <!-- Gambar ketiga -->
        <ImageView
            android:id="@+id/BolaFutsal"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:contentDescription="Futsal"
            android:layout_gravity="center"
            android:src="@drawable/bola_futsal" />

    </LinearLayout>

    <EditText
        android:id="@+id/editTextItem"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:hint="Enter item name"
        android:textColor="#2A3136"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Diskon10%"
        android:textColor="#B00020"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- RadioGroup untuk memilih membership -->
    <RadioGroup
        android:id="@+id/radioGroupMembership"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- RadioButton untuk membership -->
        <RadioButton
            android:id="@+id/radioButtonMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Membership" />

        <!-- RadioButton untuk non-membership -->
        <RadioButton
            android:id="@+id/radioButtonNonMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Non-Member" /> <!-- Default selection -->
    </RadioGroup>

    <Button
        android:id="@+id/buttonProcess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Bayar" />

    <TextView
        android:id="@+id/textViewTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text=""
        android:textColor="#2A3136"
        android:textSize="18sp" />

</LinearLayout>